<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <div class="main">
                    <h1 class="display-4" id="color-override">Welcome burger lover's!</h1>
                </div>
                <br>
                <panel>
                    <form class="create-form">
                        <div class="form-group">
                            <h3 id="color-override">Make a Burger </h3>
                            <label for="newburger" id="color-override"> New Burger : </label>
                            <input type="text" id="newburger" name="burger">
                            <button type="submit" class="btn btn-success" id="addburger"><span class="ion-icon"
                                    name="cog"></span>
                            </button>
                        </div>
                    </form>
                </panel>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-6">

            <h2 class="display-4" id="lefthead">Burger of your choice!</h2>
            <ul>
                <div class="font">
                    {{#each burgers}}
                    {{#unless devoured}}


                    <strong id="font">{{this.id}} -{{this.burger_name}}</strong>

                    <button class="btn btn-success eatburger btn-sm" id="eatbutton" data-id='{{this.id}}'
                        data-burger_name='{{this.burger_name}}'><span class="fa-fa-thumps-up"></span>devour</button>

                </div>

                {{/unless}}
                {{/each}}
            </ul>

        </div>

        {{!-- add burger after devour --}}
        <div class="col-6">
            <h2 class="display-4" id="righthead"> Eaten Yummy Burger!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <span><strong id="font">{{this.id}} - {{this.burger_name}}</strong></span>
                <button class="trashburger btn btn-warning btn-sm" id="trashbutton" data-id='{{this.id}}'
                    data-burger_name='{{this.burger_name}}'><span class="fa-fa-thumps-up"></span>devour</button>

                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <h3 class="thanks" id="color-override">Come Again to Enjoy our Burger</h3>
        </div>
    </div>

</div>