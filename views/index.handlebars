<div class="container">
    <row class="col-md-12"></row>
    <div class="row"></div>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Welcome burger lover's!</h1>
            <center>
                <img src="../assets/img/veggi burger.jpg" width="50%">
            </center>
        </div>
    </div>
</div>
<div class="container">

    <row class="col-md-12">
        {{!-add burger with devour button --}}
        <div class="col-md-5">
            <h1 class="display-4">Burger Want to Eat!</h1>
            <left>
                <img src="../assets/img/chicken burger.jpg" width="25%">
            </left>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <div>
                    <button class="btn btn-primary eatburger" data-id='{{this.id}}'
                        data-burger_name='{{this.burger_name}}'><span class="fa-fa-thumps-up"></span>devour</button>
                    <strong>{{this.id}} - {{this.burger_name}}</strong>

                </div>

                {{/unless}}
                {{/each}}
            </ul>



        </div>
        <div class="col-md-2"></div>
        {{!-- add burger after devour --}}
        <div class="col-md-5">
            <h1 class="display-4">Burger Eaten!</h1>
            <right>
                <img src="../assets/img/bean burger.jpg" width="25%">
            </right>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>

                {{/if}}
                {{/each}}
            </ul>


        </div>

    </row>
</div>
{{!-- making buger request --}}
{{!-- <panel> --}}
<form class="create-form">
    <div class="form-group">
        <label for="newburger" id="color-override">New Burger:</label>
        <input type="text" id="newburger" name="burger">
        {{!-- Create a button in index.handlebars that will submit the user input into the database. --}}
        <button type="submit" class="btn btn-success" id="addburger"><span class="fa fa-thumbs-up"></span></button>
    </div>
</form>
{{!-- </panel> --}}

</div>