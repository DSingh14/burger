<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <div class="main">
                    <h1 class="display-4" id="color-override">Welcome burger lover's!</h1>
                </div>
                <br>
                <panel>
                    <form class="create-form">
                        <div class="form-group">
                            <h3 id="color-override">Make a Burger </h3>
                            <label for="newburger" id="color-override"> New Burger : </label>
                            <input type="text" id="newburger" name="burger">
                            <button type="submit" class="btn btn-success" id="addburger"><span class="ion-icon"
                                    name="cog"></span>
                            </button>
                        </div>
                    </form>
                </panel>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-md-6">
            <div class="panel-panel-default">

                <div class="display-4" id="lefthead">Burger of your choice!</div>
                <div class="panel-body">
                    <ul>

                        {{#each burgers}}
                        {{#unless devoured}}


                        <strong id="font">{{this.id}} -{{this.burger_name}}</strong>

                        <button class="btn btn-success eatburger btn-sm" id="eatbutton" data-id='{{this.id}}'
                            data-burger_name='{{this.burger_name}}'><span class="fa-fa-thumps-up"></span>devour</button>

                        {{!-- </div> --}}

                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>



        {{!-- add burger after devour --}}
        <div class="col-md-6">
            <div class="panel-panel-default">
                <h2 class="display-4" id="righthead"> Eaten Yummy Burger!</h2>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong id="font">{{this.id}} - {{this.burger_name}}</strong></span>
                        <button class="trashburger btn btn-warning btn-sm" id="trashbutton" data-id='{{this.id}}'
                            data-burger_name='{{this.burger_name}}'><span class="fa-fa-thumps-up"></span>devour</button>

                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 text-center p-3 mb-2 ">
        <blockquote class="blockquote text-center">
            <footer class="thanks" id="color-override">Come Again to Enjoy our Burger</footer>
        </blockquote>
    </div>
</div>




</div>